---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import { SiteName, SocialLinks } from "../theme.config";
import { Font } from "astro:assets";
import { Icon } from "astro-icon/components";

const {
  title = "Default Title",
  type,
  imageUrl,
  description,
  publishedTime,
  modifiedTime,
  author,
  primaryCategory,
}: {
  title?: string;
  type?: string;
  imageUrl?: string;
  description?: string;
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  primaryCategory?: string;
} = Astro.props;
---

<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="language" content="en" />
    <meta name="site-name" content={SiteName} />
    <meta name="author" content={author} />
    <meta name="description" content={description} />

    <meta name="og:site_name" content={SiteName} />
    <meta property="og:title" content={title} />
    {description && <meta property="og:description" content={description} />}
    {type && <meta property="og:type" content={type} />}
    {imageUrl && <meta property="og:image" content={imageUrl} />}

    {
      publishedTime && (
        <meta property="article:published_time" content={publishedTime} />
      )
    }
    {
      modifiedTime && (
        <meta property="article:modified_time" content={modifiedTime} />
      )
    }
    {author && <meta property="article:author" content={author} />}
    {
      primaryCategory && (
        <meta property="article:section" content={primaryCategory} />
      )
    }

    <title>{title}</title>

    <Font cssVariable="--font-lora" preload />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />

    <script
      defer
      is:inline
      data-domain="onthreshold.com"
      src="https://plausible.trieve.ai/js/script.js"></script>
  </head>
  <body>
    <article
      class="flex flex-col items-center justify-center min-h-screen bg-white text-btcgray-800 px-6 py-12 max-w-4xl mx-auto"
    >
      <header class="text-center mb-16">
        <h1
          class="text-4xl md:text-6xl font-bold mb-4 border-b-2 sm:pb-6 pb-3 border-brand-500"
        >
          {title}
        </h1>
        <p class="text-sm md:text-base text-btcgray-600">
          {description}
        </p>
      </header>
      <main>
        <slot />
      </main>
      <footer
        class="mt-16 text-center text-sm text-btcgray-600 pt-8 border-t border-btcgray-50 w-full flex justify-between"
      >
        <ul class="flex items-center space-x-4">
          {
            SocialLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="icon hover:text-brand-500 transition-colors"
                  aria-label={link.icon.split(":")[1]}
                >
                  <Icon name={link.icon} />
                </a>
              </li>
            ))
          }
        </ul>
        <p>
          email us &mdash; <a
            href="mailto:team@onthreshold.com"
            class="border-b-2 border-brand-500 font-bold"
            >team@onthreshold.com</a
          >
        </p>
      </footer>
    </article>
  </body>
</html>

<ClientRouter />

<style>
  html {
    font-family: var(--font-lora);

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      font-family: var(--font-lora);
    }
  }
</style>
